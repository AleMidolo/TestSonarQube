<?xml version="1.0"?>
<ruleset name="Essential PMD Rules"
    xmlns="https://pmd.github.io/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://pmd.github.io/ruleset/2.0.0 https://pmd.github.io/ruleset_2_0_0.xsd">

    <description>PMD ruleset covering best practices, code style, performance, security, and error handling.</description>

    <!-- Code Style -->
    <rule ref="category/java/codestyle.xml/UnnecessaryConstructor"/>
    <rule ref="category/java/codestyle.xml/ShortVariable"/>
    <rule ref="category/java/codestyle.xml/VariableNamingConventions">
        <properties>
            <property name="minimumLength" value="3"/>
        </properties>
    </rule>
    <rule ref="category/java/codestyle.xml/AvoidStarImport"/>

    <!-- Best Practices -->
    <rule ref="category/java/bestpractices.xml/LawOfDemeter"/>
    <rule ref="category/java/bestpractices.xml/LooseCoupling"/>
    <rule ref="category/java/bestpractices.xml/AvoidDuplicateLiterals"/>
    <rule ref="category/java/bestpractices.xml/UseVarargs"/>

    <!-- Performance -->
    <rule ref="category/java/performance.xml/AvoidArrayLoops"/>
    <rule ref="category/java/performance.xml/StringBufferInsteadOfConcatenation"/>
    <rule ref="category/java/performance.xml/AvoidInstantiatingObjectsInLoops"/>

    <!-- Security -->
    <rule ref="category/java/security.xml/AvoidHardcodedCredentials"/>
    <rule ref="category/java/security.xml/InsecureRandom"/>
    <rule ref="category/java/security.xml/UseTryWithResources"/>

    <!-- Error Prone -->
    <rule ref="category/java/errorprone.xml/EmptyCatchBlock"/>
    <rule ref="category/java/errorprone.xml/ReturnEmptyCollectionRatherThanNull"/>
    <rule ref="category/java/errorprone.xml/AvoidCatchingGenericException"/>
    <rule ref="category/java/errorprone.xml/CompareObjectsWithEquals"/>

</ruleset>
